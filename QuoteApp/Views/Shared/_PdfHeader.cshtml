@{ Layout = null;}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <style>
        table, tr, td {
            page-break-inside: avoid !important;
        }

        .col-md-3 {
            width: 25%;
        }

        .col-md-offset-9 {
            margin-left: 75%;
        }

        .col-lg-2 {
            width: 16.66666667%;
        }

        .middle {
            width: 50%;
        }

        .col-lg-8 {
            width: 66.66666667%;
        }

        .col-lg-10 {
            width: 83.33333333%;
        }
    </style>

</head>
<body>
    <div class="form-horizontal" id="headerDiv">
        <div class="form-group">
            <div class="col-md-3" style="float: left"><img class="img-responsive" src="~/Content/Images/TonySquashHeader.png"></div>
            <div class="middle" style="text-align: center; float: left">
                Tony Gay<br />
                SCPS<br />
                18 Ransome Close<br />
                Cambridge<br />
                CB4 1WH
            </div>
            <div class="col-md-3" style="text-align: right; float: left">
                07 771 631 876<br />
                tonysquash@mac.com<br />
                www.tonysquash.com
            </div>
        </div>
    </div>
    <hr class="header-hr" />
    <div id="referencesDiv" style="font-size: 20px; font-family: Georgia">
        <div class="col-md-3 col-md-offset-9">
            <table style="font-weight: bold; border:none;">
                <tr>
                    <td style="text-align: right; width: 40%; padding-right: 10px;">Ref #: </td>
                    <td>@ViewData["QuoteRef"]</td>
                </tr>
                <tr>
                    <td style="text-align: right; padding-right: 10px;">Date: </td>
                    <td>@ViewData["QuoteDate"]</td>
                </tr>
            </table>
        </div>
    </div>
    
    </body>
