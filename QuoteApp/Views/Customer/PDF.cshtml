@model List<QuoteApp.Models.Customer>
@{
    Layout = null;
}

<itext creationdate="@DateTime.Now.ToString()" producer="RazorPDF">
    <paragraph style="font-family:Helvetica;font-size:18;font-style:italic;">
        <chunk style="font-weight:bold;">INVOICE</chunk>
    </paragraph>
    <table width="100%" cellpadding="0.5" cellspacing="0.5" widths="30;60" borderwidth="1.0" left="false" right="false" top="false" bottom="false" red="0" green="0" blue="0">
        <row>
            <cell>
                <chunk style="font-weight:bold;">UserName:</chunk>
            </cell>
            <cell>
                <chunk style="">@Model.FirstOrDefault().FirstName</chunk>
            </cell>
        </row>
        <row>
            <cell>
                <chunk style="font-weight:bold;">Lucky Number:</chunk>
            </cell>
            <cell>
                <chunk style="">@Model.First().LastName</chunk>
            </cell>
        </row>
    </table>
</itext>
